<?xml version="1.0" encoding="utf-8" ?>
<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:local="clr-namespace:Exman"
       xmlns:views="clr-namespace:Exman.Views"
       x:Class="Exman.AppShell"
       FlyoutBehavior="Disabled">

    <TabBar>
        <Tab Title="Home" Icon="home.png">
            <ShellContent ContentTemplate="{DataTemplate views:HomePage}" />
        </Tab>
        <Tab Title="API Test" Icon="api.png">
            <ShellContent ContentTemplate="{DataTemplate views:ApiTestPage}" />
        </Tab>
        <Tab Title="Collections" Icon="collection.png">
            <ShellContent ContentTemplate="{DataTemplate views:CollectionsPage}" />
        </Tab>
        <Tab Title="Environments" Icon="environment.png">
            <ShellContent ContentTemplate="{DataTemplate views:EnvironmentsPage}" />
        </Tab>
        <Tab Title="History" Icon="history.png">
            <ShellContent ContentTemplate="{DataTemplate views:RequestHistoryPage}" />
        </Tab>
    </TabBar>
</Shell>